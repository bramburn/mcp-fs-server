{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:rust:windows",
      "type": "npm",
      "script": "build:rust",
      "path": "extension",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "npm: watch",
      "type": "npm",
      "script": "watch",
      "path": "extension",
      "isBackground": true,
      "problemMatcher": {
        "owner": "tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/extension"],
        "pattern": {
          "regexp": "^([^\\s].*?)\\((\\d+),(\\d+)\\):\\s+(error|warning|info)\\s+TS(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*File change detected.*|Starting compilation.*",
          "endsPattern": ".*Watching for file changes.*|.*Found 0 errors.*"
        }
      }
    },
    {
      "label": "npm: compile",
      "type": "npm",
      "script": "compile",
      "path": "extension",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "problemMatcher": [
        "$tsc",
        {
          "owner": "vite",
          "fileLocation": ["relative", "${workspaceFolder}/extension"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+) - (error|warning|info) (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      ]
    },
    {
      "label": "npm: watch:extension",
      "type": "npm",
      "script": "watch:extension",
      "path": "extension",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "npm: watch:webview",
      "type": "npm",
      "script": "watch:webview",
      "path": "extension",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "vite",
          "fileLocation": ["relative", "${workspaceFolder}/extension"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+) - (error|warning|info) (.+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "VITE.*",
            "endsPattern": ".*ready in.*"
          }
        }
      ]
    },
    {
      "label": "Setup Development Environment",
      "dependsOrder": "parallel",
      "dependsOn": ["npm: watch:extension", "npm: watch:webview"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Clean Output",
      "type": "shell",
      "command": "npx",
      "args": ["rimraf", "out"],
      "options": {
        "cwd": "${workspaceFolder}/extension"
      },
      "problemMatcher": []
    },
    {
      "label": "Full Rebuild",
      "dependsOrder": "sequence",
      "dependsOn": ["Clean Output", "npm: compile"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
