{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Qdrant Index Configuration",
  "description": "Configuration for Qdrant Code Search local index",
  "type": "object",
  "required": ["qdrant_config", "ollama_config"],
  "properties": {
    "index_info": {
      "type": "object",
      "description": "Metadata about the current index state",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the collection in Qdrant"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "qdrant_config": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "description": "URL of the Qdrant instance",
          "default": "http://localhost:6333"
        },
        "api_key": {
          "type": "string",
          "description": "API Key for Qdrant cloud (optional for local)"
        }
      }
    },
    "ollama_config": {
      "type": "object",
      "required": ["model", "base_url"],
      "properties": {
        "base_url": {
          "type": "string",
          "description": "Base URL for Ollama API",
          "default": "http://localhost:11434"
        },
        "model": {
          "type": "string",
          "description": "Embedding model to use",
          "default": "nomic-embed-text"
        }
      }
    }
  }
}