{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "outDir": "out",
    "rootDir": "./src",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "shared/*": ["../packages/shared/*"],
      "$app": ["./src/webviews/app"],
      "@app/*": ["./src/webviews/app/*"],
      "@lib/*": ["./src/lib/*"],
      "@shared/*": ["../packages/shared/*"]
    },
    "strict": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node", "vitest/globals"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "../shared/**/*"],
  "exclude": ["node_modules", ".vscode-test", "svelte.config.js"]
}
