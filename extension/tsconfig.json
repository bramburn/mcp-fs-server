{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "out",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "rootDir": "..",
    
    "paths": {
        "$lib": ["./src/lib"],
        "$lib/*": ["./src/lib/*"],
        "shared/*": ["../packages/shared/*"],
        "$app/*": ["./src/webviews/app/*"]
    },
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": ["vite/client", "node", "svelte", "svelte/elements", "vitest/globals"]
  },
  "include": [
    "src/**/*",
    "src/webviews/app/ambient.d.ts",
    "vite.config.ts",
    "svelte.config.js",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}