{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "out",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "rootDir": "..",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "shared/*": ["../packages/shared/*"],
      "$app": ["./src/webviews/app"],
      "@app/*": ["./src/webviews/app/*"],
      "@lib/*": ["./src/lib/*"],
      "@shared/*": ["../packages/shared/*"]
    },
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node", "vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "svelte.config.js",
    "src/webviews/app/store.svelte.ts"
  ]
}