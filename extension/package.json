{
  "name": "qdrant-codesearch",
  "publisher": "icelabz",
  "repository": {
    "type": "git",
    "url": "https://github.com/icelabz/qdrant-codesearch.git"
  },
  "displayName": "Qdrant Code Search",
  "description": "Semantic code search using Qdrant and Ollama",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:qdrant.search.view"
  ],
  "main": "./out/extension/src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qdrant-sidebar",
          "title": "Qdrant Search",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "qdrant-sidebar": [
        {
          "type": "webview",
          "id": "qdrant.search.view",
          "name": "Search",
          "icon": "$(search-view)"
        }
      ]
    },
    "commands": [
      {
        "command": "qdrant.index.start",
        "title": "Qdrant: Index Workspace"
      },
      {
        "command": "qdrant.openSettings",
        "title": "Qdrant: Open Settings"
      }
    ],
    "configuration": {
      "title": "Qdrant Code Search",
      "properties": {
        "qdrant.search.trace": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug tracing"
        },
        "qdrant.search.limit": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 100,
          "description": "Maximum number of search results to return"
        },
        "qdrant.search.threshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum similarity score threshold for search results (0-1)"
        },
        "qdrant.search.includeQueryInCopy": {
          "type": "boolean",
          "default": false,
          "description": "Include search query as 'Instruction:' prefix when copying snippets"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build:rust": "node ./scripts/build-rust.js",
    "compile": "npm run build:rust && tsc -p ./tsconfig.json && node ./scripts/setup-resources.js && npm run build:webview",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "vite build --watch",
    "build:webview": "vite build",
    "package": "node ./scripts/package-vsix.js",
    "bump:minor": "npm version minor --no-git-tag-version",
    "release:minor": "npm run bump:minor && npm run package",
    "test": "vitest run",
    "testr": "vitest run --reporter=json --outputFile=./results.json; node ./scripts/filter-test-results.js",
    "test:watch": "vitest",
    "lint": "eslint src/webviews",
    "lint:fix": "eslint src/webviews --fix"
  },
  "dependencies": {
    "@alloc/quick-lru": "^5.2.0",
    "@fluentui/react-components": "^9.72.7",
    "@fluentui/react-icons": "^2.0.315",
    "@pinecone-database/pinecone": "^6.1.3",
    "@qdrant/js-client-rest": "^1.16.1",
    "minimatch": "^10.1.1",
    "posthog-node": "^5.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "web-tree-sitter": "^0.22.6",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.1.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.48.0",
    "vite": "^6.0.0",
    "vitest": "^1.0.0"
  }
}
