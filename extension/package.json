{
  "name": "qdrant-codesearch",
  "displayName": "Qdrant Code Search",
  "description": "Semantic code search using Qdrant and Ollama",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onViewContainer:qdrant-sidebar"
  ],
  "main": "./out/extension.js",
  "type": "module",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qdrant-sidebar",
          "title": "Qdrant Search",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "qdrant-sidebar": [
        {
          "id": "qdrant.searchView",
          "name": "Search",
          "icon": "$(file-search)"
        }
      ]
    },
    "commands": [
      {
        "command": "qdrant.index.start",
        "title": "Qdrant: Index Workspace"
      },
      {
        "command": "qdrant.openSettings",
        "title": "Qdrant: Open Configuration"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "**/.qdrant/configuration.json"
        ],
        "url": "./schemas/qdrant-config.schema.json"
      }
    ],
    "configuration": {
      "title": "Qdrant Code Search",
      "properties": {
        "qdrant.search.trace": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug tracing for search operations."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "vite build --watch",
    "package": "npm run build:webview && npm run build:extension",
    "build:extension": "tsc -p ./",
    "build:webview": "vite build",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vitest run"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/svelte": "^5.0.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "svelte": "^5.0.0-next.1",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@qdrant/js-client-rest": "^1.8.0",
    "bits-ui": "^0.21.0",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.378.0",
    "tailwind-merge": "^2.3.0"
  }
}