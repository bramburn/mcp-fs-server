{
  "name": "qdrant-codesearch",
  "displayName": "Qdrant Code Search",
  "description": "Semantic code search using Qdrant and Ollama",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension/src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qdrant-sidebar",
          "title": "Qdrant Search",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "qdrant-sidebar": [
        {
          "id": "qdrant.searchView",
          "name": "Search",
          "icon": "$(search)"
        }
      ]
    },
    "commands": [
      {
        "command": "qdrant.index.start",
        "title": "Qdrant: Index Workspace"
      },
      {
        "command": "qdrant.openSettings",
        "title": "Qdrant: Open Configuration"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "**/.qdrant/configuration.json"
        ],
        "url": "./schemas/qdrant-config.schema.json"
      }
    ],
    "configuration": {
      "title": "Qdrant Code Search",
      "properties": {
        "qdrant.search.trace": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug tracing for search operations."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "precompile": "node scripts/setup-resources.js",
    "compile": "pnpm run precompile && pnpm run check-types && pnpm run lint && pnpm run build:extension",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "vite build --watch",
    "package": "pnpm run build:webview && pnpm run build:extension",
    "build:extension": "tsc -p ./",
    "build:webview": "vite build",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "dependencies": {
    "@qdrant/js-client-rest": "^1.16.1",
    "bits-ui": "1.0.0-next.98",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.554.0",
    "tailwind-merge": "^2.6.0",
    "web-tree-sitter": "^0.22.6"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/svelte": "^5.2.9",
    "@types/node": "~20.19.25",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "~8.48.0",
    "@typescript-eslint/parser": "~8.48.0",
    "autoprefixer": "^10.4.22",
    "eslint": "~9.39.1",
    "eslint-plugin-svelte": "~2.46.1",
    "globals": "^16.5.0",
    "jsdom": "^24.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "svelte": "^5.44.0",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^3.4.18",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "~8.48.0",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  }
}
