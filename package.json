{
  "name": "mcp-semantic-watcher",
  "version": "1.0.4",
  "description": "MCP server with Qdrant vector search and file watching",
  "type": "module",
  "main": "build/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "watch": "tsc --watch",
    "setup": "node scripts/setup-wasm.cjs",
    "test-parser": "node scripts/test-parser.cjs",
    "test": "vitest",
    "deploy": "node scripts/deploy.cjs",
    "coverage": "vitest run --coverage",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@qdrant/js-client-rest": "^1.16.1",
    "better-sqlite3": "^11.10.0",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "dotenv": "^16.6.1",
    "glob": "^11.1.0",
    "ignore": "^6.0.2",
    "node-fetch": "^3.3.2",
    "web-tree-sitter": "^0.22.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}